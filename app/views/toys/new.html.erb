<h1><%= @cat.name %>'s New Toy</h1>

<form class="" action="/toys" method="post">
  <input type="hidden" name="toy[cat_id]" value="<%= @cat.id %>">

  <label for="toy_name">Name</label>
  <input
    type="text"
    name="toy[name]"
    id="toy_name"
    value="<%= @toy.name %>">
  <br>

  <label for="toy_ttypep">Type</label>
  <select name="toy[ttype]" id="toy_ttype">
    <% Toy::TTYPES.each do |ttype| %>
      <option value="<%= ttype %>"
        <%= "selected" if @toy.ttype == ttype %>>
        <%= ttype.capitalize %>
      </option>
    <% end %>
  </select>

  <input type="submit" value="Create Toy!">
</form>
